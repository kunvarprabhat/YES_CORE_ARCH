@using YES.Dtos.News;
@model NewsDto
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="breadcrumb box-title">Create News</h3>
                    <ol class="breadcrumb pull-right">
                        <li><a href="~/Dashboard/Index"><i class="fa fa-dashboard"></i>&nbsp;Dashboard</a></li>
                        <li><a href="~/News/Index"><i class="fa fa-List"></i>&nbsp;News List</a></li>
                        <li class="active">Create News</li>
                    </ol>
                </div>
                <hr />

                <div class="box-body">
                    <div class="card">
                        <div class="card-body">
                            <form id="newsForm" enctype="multipart/form-data">
                                <div class="row">
                                    <input type="hidden" asp-for="Id" />
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            @Html.LabelFor(x=>x.Title)
                                            <input asp-for="Title" maxlength="60" placeholder="Please enter Title" class="form-control" />
                                            <span asp-validation-for="Title" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            @Html.LabelFor(x=>x.Details)
                                            <input asp-for="Details" placeholder="Please enter Details" class="form-control" />
                                            <span asp-validation-for="Details" class="text-danger"></span>
                                        </div>
                                    </div>

                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <button type="button" class="btn btn-success" id="btnSubmit">Submit</button>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts{
    <script type="text/javascript" src="~/Feature/News/Create-News.js"></script>
    <script src="~/Feature/Comman/SubmitData.js"></script>
}

