@using YES.Dtos.News
@model IEnumerable<NewsDto>
@{
    ViewData["Title"] = "LatestNews";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12">

    <div id="banner-area" class="banner-area" style="background-image: url(images/banner/banner1.jpg)">
        <div class="banner-text">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="banner-heading">
                            <h1 class="border-title border-left">Latest News</h1>
                            <ol class="breadcrumb">
                                <li><a href="~/Home/Index">Home</a> </li>
                                <li>Latest New</li>
                            </ol>
                        </div>
                    </div>
                    <!-- Col end -->
                </div>
                <!-- Row end -->
            </div>
            <!-- Container end -->
        </div>
        <!-- Banner text end -->
    </div>
    <!-- Banner area end -->
    <section id="main-container" class="main-container">
        <div class="container">
            <div class="row">

                <div class="col-lg-8 col-md-8 col-sm-7 col-xs-12">
                    <div class="sidebar sidebar-left">
                        <h3 class="widget-title">NEWS</h3>
                        @foreach (var item in Model)
                        {
                            <div class="row">
                                <div class="col-lg-3">
                                    <img src="~/images/yescc.png" class="pull-left" alt="" height="50px;" width="150px" />
                                </div>

                                <div class="col-lg-9">
                                    <div class="card-header pull-left">
                                        <h4 style="margin: 0px"><u> @item.Title </u></h4>
                                    </div>
                                    <div class="card-header pull-right">

                                        <p class="fa fa-calendar">
                                            <strong>
                                                &nbsp;&nbsp;@item.CreatedDate.ToString("dd-MM-yyyy hh:mm tt")
                                            </strong>
                                        </p>

                                    </div>
                                    <div class="clearfix"></div>
                                    <p>@item.Details</p>

                                </div>
                                <div class="clearfix"></div>
                                <hr />
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

</div>
