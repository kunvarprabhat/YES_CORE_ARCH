@using YES.Dtos.ExamResult;

@model ExamVm

<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title">Add Course</h4>
        </div>
        <form id="examForm">
            <div class="modal-body">

                <table id="maintable" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
                    <thead>
                        <tr role="row">
                            <th>Course Name</th>
                            <th>Exam Name</th>
                            <th>Assesment/Course/Modules</th>
                            <th>Tools</th>
                        </tr>
                    </thead>
                    <tbody id="courseDetailsId">

                        <tr class="data-exam">
                            <td>
                                <input type="hidden" asp-for="examDtos[0].Id" class="form-control" />
                                @Html.DropDownListFor(x=>x.examDtos[0].CourseId,new SelectList(Model.Courses, "CourseId", "CourseShortName"),"Select Course",new{@class="form-control"})

                                <span asp-validation-for="examDtos[0].CourseId" class="text-danger"></span>
                            </td>
                            <td>
                                <input asp-for="examDtos[0].ExamName" class="form-control" />
                                <span asp-validation-for="examDtos[0].ExamName" class="text-danger"></span>
                            </td>
                            <td>
                                <input asp-for="examDtos[0].Modules" class="form-control" />
                                <span asp-validation-for="examDtos[0].Modules" class="text-danger"></span>
                            </td>
                            <td>
                                <button type="button" class="btn btn-xs btn-primary classAdd"><i class="fa fa-plus"></i></button>
                                <button type="button" disabled class="deleteContact btn btn btn-danger btn-xs"><i class="fa fa-minus"></i></button>
                            </td>
                        </tr>

                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
                <span id="load">
                    <button type="button" class="btn btn-success" id="btnSubmit" onclick="btnSubmitExamData()">Save changes</button>
                </span>
            </div>
        </form>
    </div>
    <!-- /.modal-content -->
</div>
<!-- /.modal-dialog -->