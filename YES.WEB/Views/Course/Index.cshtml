@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="breadcrumb box-title">Add Course</h3>
                    <ol class="breadcrumb pull-right">
                        <li><a href="~/Dashboard/Index"><i class="fa fa-dashboard"></i>&nbsp;Dashboard</a></li>
                        <li class="active">New Course</li>
                    </ol>
                </div>
                <div class="card-header pull-right" style="margin:5px;float:left">
                    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#modal-course" style="font-size: 15px;"><i class="fa fa-plus-circle"></i>&nbsp;Add Course</button>
                </div>
                <hr />
                <div class="box-body">
                    <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">

                        <div class="row">
                            <div class="col-sm-12">
                                <table id="tblCourseList" class="table table-bordered table-striped dataTable table-responsive" role="grid" aria-describedby="example1_info">
                                    <thead>
                                        <tr role="row">
                                            <th>Sr.No</th>
                                            <th>Course Short Name</th>
                                            <th>Course Full Name</th>
                                            <th>Course Duration</th>
                                            <th>Tools</th>
                                        </tr>
                                    </thead>

                                </table>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
<div class="modal fade" id="modal-course">
    @await Html.PartialAsync("_CoursePartialView")
</div>
@section Scripts{
    <script type="text/javascript" src="~/Feature/Course/Course.js"></script>
}