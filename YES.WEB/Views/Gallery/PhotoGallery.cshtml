@using YES.Dtos.Gallery
@model IEnumerable<GalleryDto>

@{
    ViewData["Title"] = "PhotoGallery";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12">
    <div id="banner-area" class="banner-area" style="background-image: url(images/banner/ban1.jpg)">
        <div class="banner-text">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="banner-heading">
                            <h1 class="border-title border-left">Photo Gallery</h1>
                            <ol class="breadcrumb">
                                <li><a href="/">Home</a> </li>
                                <li>Gallery</li>
                                <li>Photo Gallery</li>
                            </ol>
                        </div>
                    </div>
                    <!-- Col end -->
                </div>
                <!-- Row end -->
            </div>
            <!-- Container end -->
        </div>
        <!-- Banner text end -->
    </div>
    <!-- Banner area end -->

    <section id="project-area">
        <div class="container">
            <div class="row">

                <div id="isotope" class="isotope">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-4 col-sm-6 col-xs-12 commercial isotope-item">
                            <div class="isotope-img-container">
                                <a class="gallery-popup" href="@item.ImagePath?.Replace("wwwroot","")">
                                    <img class="img-thumbnail" src="@item.ImagePath?.Replace("wwwroot","")" alt="">
                                    <span class="gallery-icon"><i class="fa fa-plus"></i></span>
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>

</div>

