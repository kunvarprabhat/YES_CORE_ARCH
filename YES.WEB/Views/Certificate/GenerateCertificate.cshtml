@using YES.Dtos.Student
@model StudentDto
@{
    ViewData["Title"] = "GenerateCertificate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<section class="content">
    <div class="row">
        <div class="col-xs-12 col-lg-12 col-md-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="breadcrumb box-title">Generate Certificate</h3>
                    <ol class="breadcrumb pull-right">
                        <li><a href="Dashboard/Index"><i class="fa fa-dashboard"></i>&nbsp;Dashboard</a></li>
                        <li class="active">Generate Certificate</li>
                    </ol>
                </div>
                <hr />
                <div class="box-body">
                    <div class="row">
                        <div class="col-lg-2">
                            <label>Coustom Date</label>
                        </div>
                        <div class="col-lg-8">
                            <input type="datetime-local" id="dateOfIssue" class="form-control" />
                        </div>
                        <div class="col-lg-2">
                            <button type="button" class="btn btn-info" onclick="updateDate(@Model.Id,@Model.CourseId)">Update</button>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="row mt-5" id="Result">
                        @await Html.PartialAsync("_CertificatePartialView")

                    </div>
                    <div class="col-lg-12">
                        <div class="clearfix">
                            <hr />
                        </div>
                        <div class="text-left">
                            <button type="button" class="btn btn-success pull-right" onclick="printContent('printarea');">
                                <span class="fa fa-print">&nbsp; PRINT</span>
                            </button>
                        </div>
                        <div class="text-left">
                            <button type="button" class="btn btn-success pull-right" onclick="DownloadCertificate('printarea');">
                                <span class="fa fa-download">&nbsp; Download</span>
                            </button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts{
    <script type="text/javascript" src="~/Feature/GenrateResult/Certificate.js"></script>
}