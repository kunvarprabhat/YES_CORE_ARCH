@using YES.Dtos.Account;
@model LoginDto

<div class="form-group">
    <div class="col-md-12">
        <input type="text" class="form-control" placeholder="User Id" asp-for="UserName" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
</div>
<div class="form-group">
    <div class="col-md-12">
        <input type="password" class="form-control" placeholder="Password" asp-for="Password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
</div>
<div class="form-group">
    <div class="custom-control custom-checkbox mb-2 mr-sm-2 mb-sm-0 ml-2">
        <input type="checkbox" class="custom-control-input" checked asp-for="RememberMe">
        <label class="custom-control-label float-left" for="RememberMe">Remember Me</label>
        <label class="float-right"><a onclick="Login.goToForgotPage()" style="color:#9bbe43"> Forgot Password?</a></label>
    </div>

</div>

<div class="form-group">
    <div class="col-md-12">
        <button class="x-btn btn-pink btn-block btn-raised" id="btnSubmit"><span id="Load"> Login</span></button>
        <input type="reset" class="x-btn btn-secondary btn-block btn-raised" value="Cancel" />

    </div>
</div>