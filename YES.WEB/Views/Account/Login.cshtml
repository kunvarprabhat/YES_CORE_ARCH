@using YES.Dtos.Account;
@{
    Layout = null;
}

<!DOCTYPE html>
@model LoginDto
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <meta name="keywords" content="yess login, yes computer center login page, yes computer center, yescc loing, yescc login page, yes web app">
    <meta name="author" content="PIXINVENT">
    <title>Yescc</title>

    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-touch-fullscreen" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="default">
    <!-- FontAwesome -->
    <link rel="stylesheet" href="~/css/font-awesome.min.css">
    <!-- Template styles-->
    <link rel="stylesheet" href="~/app-assets/css/app.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link href="~/toastr/toastr.min.css" rel="stylesheet" />
</head>
<body>
    <form id="loginForm">
        <div class="container">
            <div class="row" style="margin-top:50px;">
                <div class="col-lg-4"></div>

                <div class="col-lg-4 tallyslider">
                    <div class="form-group">
                        <br />
                        <a href="Home/Index">
                            <img src="~/images/yescc.png" alt="Webful Vision Eye Care" height="50px" width="350px" />
                        </a>
                    </div>
                    <div class="mt-4">
                        <div class="form-group">
                            <div class="col-md-12">
                                <input type="text" class="form-control" placeholder="User Id" asp-for="UserName" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <input type="password" class="form-control" placeholder="Password" asp-for="Password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="custom-control custom-checkbox mb-2 mr-sm-2 mb-sm-0 ml-3">
                                        <input type="checkbox" class="custom-control-input" checked asp-for="RememberMe">
                                        <label class="custom-control-label float-left" for="RememberMe">Remember Me</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-12">
                                <input type="button" class="x-btn btn-pink btn-block btn-raised" id="btnSubmit" value="Login" />
                                <input type="reset" class="x-btn btn-secondary btn-block btn-raised" value="Cancel" />

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <script type="text/javascript" src="~/js/jquery.js"></script>
    <!-- Bootstrap jQuery -->
    <script type="text/javascript" src="~/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/toastr/toastr.min.js"></script>
    <script src="~/Feature/Account/Login.js"></script>
</body>
</html>
