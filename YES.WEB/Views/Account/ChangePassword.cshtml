@using YES.Dtos.Account;
@model ChangePasswordDto
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="breadcrumb box-title">Change Password</h3>
                    <ol class="breadcrumb pull-right">
                        <li><a href="~/Dashboard/Index"><i class="fa fa-dashboard"></i>&nbsp;Dashboard</a></li>
                        <li class="active">Create new Password</li>
                    </ol>
                </div>
                <hr />

                <div class="box-body">
                    <div class="card">
                        <div class="card-body">
                            <div class="col-lg-3"></div>
                            <form id="changePassword">
                                <div class="col-lg-6 tallyslider">
                                    <div class="mt-4">
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                <label asp-for="OldPassword"></label>
                                                <input asp-for="OldPassword" class="form-control" />
                                                <span asp-validation-for="OldPassword" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label asp-for="NewPassword"></label>
                                            <input asp-for="NewPassword" class="form-control" />
                                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label asp-for="ConfirmPassword"></label>
                                            <input asp-for="ConfirmPassword" class="form-control" />
                                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <button class="btn btn-success pull-right" id="btnSubmit"><span id="Load"> Change Password</span></button>

                                        </div>
                                    </div>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/Feature/Account/Account.js"></script>
        }
